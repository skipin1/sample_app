<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name, "Имя" %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<% if signed_in? %>
				<!-- <%= f.label :old_password, "Введите старый пароль" %> -->
				<!-- <%= f.password_field :old_password %> -->
				
				<%= f.label :password, "Введите новый пароль" %>
				<%= f.password_field :password %>
				
				<%= f.label :password_confirmation, "Подтверждение пароля" %>
				<%= f.password_field :password_confirmation %>

				<%= gravatar_for @user %>
    		<a href="http://gravatar.com/emails" target="_blank">изменить</a>
				
				<%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>

			<% else %>
				<%= f.label :password, "Пароль" %>
				<%= f.password_field :password %>
				
				<%= f.label :password_confirmation, "Подтверждение" %>
				<%= f.password_field :password_confirmation %>
				
				<%= f.submit "Создать пользователя", class: "btn btn-large btn-primary" %>
			<% end %>

		<% end %>
	</div>
</div>